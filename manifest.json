{
  "manifest_version": 3,
  "name": "Tab Timer",
  "description:": "Shows how long tabs have been open.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.ts"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.ts"],
      "css": ["content.css"]
    }
  ]
}
